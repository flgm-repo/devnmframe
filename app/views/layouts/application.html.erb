    <%= link_tag "/favicon.ico", :rel => "shortcut icon" %>
    <!-- StyleSheets -->
    <%= stylesheet_link_tag 'main_stylesheet', :media => "all" %>
    <%= stylesheet_link_tag 'print', :media => "print" %>
    <%= yield :custom_stylesheets %>
