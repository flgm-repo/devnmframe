<div id="signup" class="signup-container">
  <h5>Sign Up</h5>
  <div class="notice" id="div_login_notice">
  <%= error_messages_for 'user' %>
  </div>
  <% form_for :user, :url => users_path, :html => {:class=> 'login-form'} do |f| -%>
    <fieldset>
      <p><label for="email">Email</label>
      <%= f.text_field :email, :class => 'input-box' %></p>

      <p><label for="password">Password</label>
      <%= f.password_field :password, :class => 'input-box' %></p>

      <p><label for="password_confirmation">Confirm Password</label>
      <%= f.password_field :password_confirmation, :class => 'input-box' %></p>

      <p><%= submit_tag 'Sign up', :type => "image", :src => "/images/create-user.gif" %></p>
    </fieldset>
  <% end %>
</div>
