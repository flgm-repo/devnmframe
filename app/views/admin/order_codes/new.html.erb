<% content_for :header_title do %>
  New Order Code
<% end %>
<div class="span-33 clear content-area">
	<div class="clear"></div>

	<!-- Customize Options-->
	<div class="span-13 prepend-10">
		<div class="span-13 column outer-block">
			<% form_for [:admin, @order_code], :url => admin_order_codes_path, :html => {:class=>"checkout-form"} do |f| %>
			  <%= f.error_messages :header_message => "There were some errors that prohibited the order code from being saved:" %>
				<div class="inner-block">
					<fieldset>
					  <%= render :partial => "form", :locals => {:form => f, :code => @order_code} %>
						<div class="span-4 column edit-margin">
						  <%= f.submit "Create", :type => "image", :src => "/images/create-user.gif" %>
						</div>
						<div class="span-3 column edit-margin">
							<%= link_to image_tag("back-admin-large.gif", :width => "63", :height => "48", :alt => "" ), admin_order_codes_path %>
						</div>
					</fieldset>
				</div>
				<% end %>
				<div class="clear"></div>
		</div>
	</div>
	<!-- Customize Options Ends-->
</div>

