<% content_for :header_title do %>
  Users Management
<% end %>
<div class="span-33 clear content-area">
		<!-- Customize Options-->
			<div class="span-33 column outer-block">
				<div class="inner-block">
					<div class="new-user"><%= link_to image_tag("/images/new-user-button.gif", :width => "144", :height => "49", :alt => ""), new_admin_user_path %></div>
					<!-- Tabular Data -->
					<div class="span-34 prepend-1">
						<div class="tbl-row table-titles">
							<div class="span-3 column">User No.</div>
							<div class="span-8 column">Name</div>
							<div class="span-8 column">Email</div> 
							<div class="span-8 column">Role</div>
							<div class="span-3 column last">Action</div>
							<div class="clear"></div>
						</div>
						<% i = false %>
						<% @users.each do |user| %>
              <% unless user.id == current_user.id %>
                <% i = !i %>
                <div class="tbl-row <%= (i)? 'odd':'even' %>">
                  <div class="span-3 column"><%= user.id %></div>
                  <div class="span-8 column"><%= (user.name.blank?)? "None" : ( link_to "#{user.name}", admin_user_path(user) )%></div>
                  <div class="span-8 column"><%= user.email %></div>
                  <div class="span-6 column"><%= user.role.title unless user.role.nil? %></div>
                  <div class="span-6 column last">
                    <%= link_to image_tag("/images/edit-but-admin.gif", :width => "63", :height => "28", :alt => ""), edit_admin_user_path(user) %>
                    <% if user.active? %>
                      <%= link_to image_tag("/images/disable-but.gif", :width => "82", :height => "28", :alt => ""), disable_admin_user_path(user) %>
                    <% else %>
                      <%= link_to 'Enable', enable_admin_user_path(user) %>
                    <% end%>
                  </div>
                  <div class="clear"></div>
                </div>
              <% end %>
            <% end %>
					</div>
					<!-- Tabular Data -->
				</div>
			</div>
		<!-- Customize Options Ends-->
	</div>

